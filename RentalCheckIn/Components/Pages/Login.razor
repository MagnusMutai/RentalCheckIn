@page "/login"
@inherits LoginBase

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}
<div class="container-fluid">
    <div class="row">
        <div class="col-6 full-height" style="background-color: red;">
            @* <img src="images/snowylodge .jpg" alt="An image of the apartment" /> *@
        </div>
        <div class="col-6 full-height" style="background-color: green;">
            <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />

                <InputText @bind-Value="loginModel.Email" placeholder="Email" />
                <ValidationMessage For="@(() => loginModel.Email)" />
                <InputText @bind-Value="loginModel.Password" placeholder="Password" type="password" />
                <ValidationMessage For="@(() => loginModel.Password)" />
                <button type="submit">Login</button>
            </EditForm>
        </div>
    </div>
</div>