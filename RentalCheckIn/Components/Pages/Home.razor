@page "/"
<PageTitle>Reservations</PageTitle>

<h3>Welcome to the Protected Home Page!</h3>

<AuthorizeView>
    <Authorized>
        <p>Hello, @context.User.Identity.Name!</p>
        <p>Your role: @context.User.FindFirst(ClaimTypes.Role)?.Value</p>
        <p><a href="/logout">Logout</a></p>
    </Authorized>
    <NotAuthorized>
        <p>You are not authorized to view this page. Please <a href="/login">login</a>.</p>
    </NotAuthorized>
</AuthorizeView>