@page "/email-confirmation"
@inherits ConfirmEmailBase
@using Microsoft.Extensions.Localization
@using RentalCheckIn.Locales
@inject IStringLocalizer<Resource> Localizer

<div class="container-fluid text-white">
    <div class="row">
        <div class="col-12 col-md-6 py-5 full-height text-center left-half">
            <h3 class="mt-5 pt-4">@Localizer["WelcomeMessage"]</h3>
        </div>
        <div class="col-12 col-md-6 full-height">
            <div class="mx-auto col-10 col-sm-8 col-md-8 col-lg-8 mt-5 pt-2">

                <h3>Email Verification</h3>
                @if (isSuccess)
                {
                    <p class="text-success">@Message</p>
                }
                else if (!string.IsNullOrEmpty(errorMessage))
                {
                    <p class="text-danger">Error verifying your email: @errorMessage</p>
                }

                <button class="btn btn-success" onclick="@(() => HandleVerifyEmail())">Verify Email</button>
            </div>
        </div>
    </div>
</div>