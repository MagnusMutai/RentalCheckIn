@page "/reset-password"
@inherits PasswordResetBase
@using Microsoft.Extensions.Localization
@using RentalCheckIn.Locales
@inject IStringLocalizer<Resource> Localizer

<div class="container-fluid text-white">
    <div class="row">
        <div class="col-12 col-md-6 py-5 full-height text-center left-half">
            <h3 class="mt-5 pt-4">@Localizer["WelcomeMessage"]</h3>
        </div>
        <div class="col-12 col-md-6 full-height">
            <div class="mx-auto col-10 col-sm-8 col-md-8 col-lg-8 mt-md-5 pt-md-2">

                @if (IsPasswordResetSuccessful)
                {
                    <p>Your password has been successfully reset. <a @onclick="@(() => NavigationManager.NavigateTo("/login"))">Go to login page</a>.</p>
                }
                else
                {
                    <p class="fs-3 my-4">Change password</p>
                    <EditForm Model="resetPasswordModel" OnValidSubmit="HandleResetPassword">
                        <DataAnnotationsValidator />

                        <div class="mb-4">
                            <InputText class="bg-transparent text-white rounded-pill form-control" @bind-Value="resetPasswordModel.NewPassword" placeholder="Password" type="password" />
                            <ValidationMessage For="@(() => resetPasswordModel.NewPassword)" class="text-danger ms-2" />
                        </div>

                        <div class="mb-5 py-2">
                            <InputText class="bg-transparent text-white rounded-pill form-control" @bind-Value="resetPasswordModel.ConfirmPassword" placeholder="Confirm password" type="password" />
                            <ValidationMessage For="@(() => resetPasswordModel.ConfirmPassword)" class="text-danger ms-2" />
                        </div>

                        <button type="submit" class="btn btn-primary mysavepass-btn" disabled="@(IsLoading)">
                            @if (ShouldSpin)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            }
                            Save Password
                        </button>
                    </EditForm>

                    @if (!string.IsNullOrEmpty(Message))
                    {
                        <p class="text-info ms-2">@Message</p>
                    }
                }
            </div>
        </div>
    </div>
</div>


